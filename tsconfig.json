{
	"compilerOptions": {
		"target": "ES2019",
		"lib": ["ESNext", "DOM", "WebWorker"],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"jsx": "react",

		"newLine": "LF",
		"strict": true,

		"esModuleInterop": true,
		"removeComments": true,
		"sourceMap": true,
		"experimentalDecorators": true
	},
	"exclude": [
		"deps",
		"node_modules"
	]
}
